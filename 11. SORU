import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Bir n sayısı girin: ");
        int n = input.nextInt();

        int toplam = 0;

        for (int i = 1; i <= n; i++) {
            toplam =toplam+ i;
        }

        System.out.println("1'den " + n + " kadar olan sayıların toplamı: " + toplam);
    }
}
